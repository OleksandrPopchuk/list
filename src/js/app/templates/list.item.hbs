<div class="list-item-content fn-list-item">
    <div class="list-item-row">
        <img class="photo" src="{{ photo }}" alt="{{ firstName }}">
    <span class="name">
        <span class="first-name">{{ firstName }}</span>
        <span class="last-name">{{ lastName }}</span>
    </span>
    </div>
    <div class="list-item-row">
        <span class="label bdate-label">Birthday: </span>
        <span class="bdate">{{ bdate }}</span>
    </div>
    <div class="list-item-row">
        <span class="label site-label">Website: </span>
        <a href="{{ site }}" class="site">{{ site }}</a>
    </div>
</div>
